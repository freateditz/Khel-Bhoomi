{
  "name": "khel-bhoomi",
  "version": "1.0.0",
  "description": "Khel Bhoomi - Sports Platform connecting athletes, scouts, and fans",
  "main": "index.js",
  "scripts": {
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && yarn install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev:backend": "cd backend && uvicorn server:app --reload --host 0.0.0.0 --port 8001",
    "dev:frontend": "cd frontend && yarn dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && yarn build",
    "build": "npm run build:frontend",
    "start:backend": "cd backend && uvicorn server:app --host 0.0.0.0 --port 8001",
    "start:frontend": "cd frontend && yarn preview --host 0.0.0.0 --port 3000",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "test:backend": "cd backend && python -m pytest tests/",
    "test": "npm run test:backend",
    "deploy:render": "bash deploy.sh",
    "setup:demo-users": "python create_dummy_users.py"
  },
  "keywords": [
    "sports",
    "platform",
    "athletes",
    "scouts",
    "fans",
    "social",
    "networking"
  ],
  "author": "Khel Bhoomi Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/khel-bhoomi.git"
  },
  "homepage": "https://github.com/your-username/khel-bhoomi#readme"
}